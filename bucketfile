pipeline{
    parameters {
        activeChoiceParam('SERVER') {
            description('Allows user choose from multiple Server')
            filterable()
            choiceType('SINGLE_SELECT')
            groovyScript {
                script('["dev", "test"]')
                fallbackScript('"fallback choice"')
            }
        }
        activeChoiceReactiveParam('BUCKET') {
            description('Allows user choose from multiple bucket')
            filterable()
            choiceType('SINGLE_SELECT')
            groovyScript {
                script('["dev-bucket", "test-bucket"]')
                fallbackScript('"fallback choice"')
            }
            referencedParameter('SERVER')
        }
    }
}
